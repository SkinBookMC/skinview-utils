{
	"compilerOptions": {
		/* Basic Options */
		"target": "ES2017",
		"module": "ES2020",
		"declaration": true,
		"sourceMap": true,
		"outDir": "build",

		/* Strict Type-Checking Options */
		"strict": true,
		"strictFunctionTypes": true,
		"noImplicitAny": true,
	},
	"include": ["./src/**/*.ts"]
}
